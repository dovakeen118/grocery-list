<div class="callout user">
  <h2>Forgot your password?</h2>
  <p>Enter the email for your account, <br>
  and we'll email you a link to reset your password</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
  <% end %>

  <div class="links">
    <%= link_to "Log in", new_session_path(resource_name) %> | <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>

</div>
